.container{
  padding: 20rpx;
}
.container .userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container .userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.container .userinfo-nickname {
  color: #aaa;
}

.container .collect-box {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border:1px solid #aaa; 
  border-radius: 10rpx;
  padding: 0 20rpx;
}
.container .usermotto{
  margin-top: 150rpx;
}
.container .usermotto .mycollect{
  height:60rpx;
  line-height: 60rpx;
}
.container .usermotto .mycollect image{
  width:35rpx;
  height: 34rpx;
}
.container .usermotto .mycollect text{
  font-family: sans-serif;
  margin-left: 10rpx;
}
.container .usermotto .gotocollect image{
  width:35rpx;
  height: 34rpx;
}
.container .usermotto .about text{
  font-family: serif; 
  font-weight: bold;
  color: rgb(211, 84, 84);
  text-indent: 20rpx;
}
.hide{
  display: none;
}
.show{
  display: block;
}