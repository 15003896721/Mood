.add{
  padding: 30rpx;
  text-align:center;
  background:url("http://127.0.0.1:3008/img/fb-bg1.jpg") no-repeat;
  background-size: 100% 100%;
  height: 100vh;
}
.add .add-box{
  height: 600rpx;
  border:1px solid #ddd;
  border-radius: 20rpx;
}
.add .fb-box{
  width: auto;
  text-align: center;
}
.add .fb-texts{
  width: 685rpx;
  text-align: left;
  
  color: rgb(40, 42, 43);
  font-size: 22px;
  font-family: serif;
  text-indent: 0.5em;
  padding-top: 10rpx;
}
.add .fbs{
  height: 150rpx;
  display: flex;
  flex-direction: row;
  padding: 130rpx 20rpx 0;
  justify-content: space-between;
  align-items:flex-end;
}
.add .fbs image{
  width: 80rpx;
  height: 80rpx;
}
.add .fbs .addphoto{
  color: rgb(248, 155, 155);
}
.add .fbs button.btn{
  width:150rpx;
  height: 80rpx;
  font-size: 22px;
  line-height: 80rpx;
  font-family: serif;
  font-weight: bold;
  color: rgb(94, 93, 93);
}
